{
  "name": "mylife-gallery",
  "version": "2.0.18",
  "description": "MyLife photo gallery",
  "main": "index.js",
  "scripts": {
    "lint": "eslint lib/ public/src/",
    "watch": "mylife-watch",
    "start-web": "MONGO_URL=${MONGO_URL:-mongodb://localhost/mylife-gallery} GALLERY_PATH=${GALLERY_PATH:-/mnt/files-share/Photos} WEB_PORT=8012 node dist/dev/server.js --dev --loglevel=debug --config=./conf/config.json --web",
    "start-sync": "MONGO_URL=${MONGO_URL:-mongodb://localhost/mylife-gallery} GALLERY_PATH=${GALLERY_PATH:-/mnt/files-share/Photos} WEB_PORT=8012 node dist/dev/server.js --dev --loglevel=debug --config=./conf/config.json --sync",
    "build:dev": "mylife-build development",
    "build:prod": "mylife-build production",
    "docker-publish-only": "mylife-publish",
    "docker-publish": "mylife-build production && mylife-publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincent-tr/mylife-gallery.git"
  },
  "author": "Vincent Trumpff",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/vincent-tr/mylife-gallery/issues"
  },
  "homepage": "https://github.com/vincent-tr/mylife-gallery#readme",
  "dependencies": {
    "date-fns": "^2.28.0",
    "exif-parser": "^0.1.12",
    "ffmpeg-static": "^5.0.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^10.1.0",
    "jimp": "^0.16.1",
    "mylife-tools-common": "^1.0.9",
    "mylife-tools-server": "^1.0.22"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.1",
    "@types/ffprobe-static": "^2.0.1",
    "@types/fluent-ffmpeg": "^2.1.20",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.1",
    "humanize": "0.0.9",
    "humanize-duration": "^3.27.2",
    "leaflet": "^1.8.0",
    "mylife-tools-build": "^1.2.12",
    "mylife-tools-ui": "^1.0.18",
    "react-leaflet": "^4.0.0",
    "react-sortable-hoc": "^2.0.0"
  }
}
