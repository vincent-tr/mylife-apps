{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "ts-lib",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "ts-src/types/*"
            ]
        }
    },
    "include": [
        "ts-src/**/*"
    ]
}